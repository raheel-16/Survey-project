generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Survey {
  id         String              @id @default(uuid())
  title      String
  ownerId    String
  createdAt  DateTime            @default(now())
  questions  Question[]
  responses  Response[]
  sharedWith SurveyAdminAccess[]
}

model SurveyAdminAccess {
  id       String @id @default(uuid())
  surveyId String
  adminId  String
  survey   Survey @relation(fields: [surveyId], references: [id])

  @@unique([surveyId, adminId])
}

model Question {
  id       String       @id @default(uuid())
  surveyId String
  text     String
  type     QuestionType
  rankMax  Int?
  survey   Survey       @relation(fields: [surveyId], references: [id])
  answers  Answer[]
}

model Response {
  id         String   @id @default(uuid())
  surveyId   String
  answererId String
  createdAt  DateTime @default(now())
  survey     Survey   @relation(fields: [surveyId], references: [id])
  answers    Answer[]

  @@unique([surveyId, answererId])
}

model Answer {
  id         String   @id @default(uuid())
  responseId String
  questionId String
  valueText  String?
  valueBool  Boolean?
  valueRank  Int?
  response   Response @relation(fields: [responseId], references: [id])
  question   Question @relation(fields: [questionId], references: [id])

  @@unique([responseId, questionId])
}

enum QuestionType {
  RANK
  BOOLEAN
  TEXT
}
